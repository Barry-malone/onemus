<% @title="Onemus login" %>
<table>
  <tr>
    <td>
      <h2>Signup</h2>
      <%= form_for :create, url: welcome_create_path, html: { id: "create_form" } do |f| %>
        <p>
          <%= f.label :username %><br>
          <%= f.text_field :username %>
        </p>

        <p>
          <%= f.label :password %><br>
          <%= f.password_field :password %>
        </p>
        <p>
          <%= f.label :confirm_password %><br>
          <%= f.password_field :confirm_password%>
        </p>
        <p id="create_error"></p>
        <p>
          <%= f.submit "Sign up", onclick: "return check_create_form();" %>
        </p>
      <% end %>
    </td>
    <td>
      <h2>Log in</h2>
      <%= form_for :login, url: sessions_login_path do |f|%>
        <p>
          <%= f.label :username %><br>
          <%= f.text_field :username %>
        </p>

        <p>
          <%= f.label :password %><br>
          <%= f.password_field :password %>
        </p>
        <p id="login_error"></p>
        <p>
          <%= f.submit "Login", onclick: "return check_login_form();" %>
        </p>
      <% end %>
    </td>
  </tr>
</table>
